@{
}

@model List<Contract_Monthly_Claim_System.Models.ApplicationUser>

@{
    ViewData["Title"] = "Lecturer Management";
}

<div class="container">
    <h2>Lecturer Management</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Hourly Rate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lecturer in Model)
            {
                <tr>
                    <td>@lecturer.FirstName @lecturer.LastName</td>
                    <td>@lecturer.Email</td>
                    <td>@lecturer.PhoneNumber</td>
                    <td>R @lecturer.HourlyRate</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@lecturer.Id" class="btn btn-warning btn-sm">Edit Rate</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
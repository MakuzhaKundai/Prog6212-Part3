@{
}
@model IEnumerable<Contract_Monthly_Claim_System.Models.User>

@{
    ViewData["Title"] = "Lecturer Management";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4>Lecturer Management</h4>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Hourly Rate</th>
                        <th>Date Registered</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lecturer in Model)
                    {
                        <tr>
                            <td>@lecturer.FullName</td>
                            <td>@lecturer.Email</td>
                            <td>@(lecturer.PhoneNumber ?? "N/A")</td>
                            <td>R @lecturer.HourlyRate</td>
                            <td>@lecturer.DateCreated.ToString("yyyy-MM-dd")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@lecturer.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@lecturer.Id" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@lecturer.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
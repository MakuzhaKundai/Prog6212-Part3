@{
}
@model Contract_Monthly_Claim_System.Models.User

@{
    ViewData["Title"] = "Lecturer Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4>Lecturer Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone Number:</dt>
                        <dd class="col-sm-8">@(Model.PhoneNumber ?? "Not provided")</dd>

                        <dt class="col-sm-4">ID Number:</dt>
                        <dd class="col-sm-8">@(Model.IdNumber ?? "Not provided")</dd>

                        <dt class="col-sm-4">Hourly Rate:</dt>
                        <dd class="col-sm-8">R @Model.HourlyRate</dd>

                        <dt class="col-sm-4">Date Registered:</dt>
                        <dd class="col-sm-8">@Model.DateCreated.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Bank Name:</dt>
                        <dd class="col-sm-8">@(Model.BankName ?? "Not provided")</dd>

                        <dt class="col-sm-4">Account Number:</dt>
                        <dd class="col-sm-8">@(Model.AccountNumber ?? "Not provided")</dd>

                        <dt class="col-sm-4">Branch Code:</dt>
                        <dd class="col-sm-8">@(Model.BranchCode ?? "Not provided")</dd>
                    </dl>

                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
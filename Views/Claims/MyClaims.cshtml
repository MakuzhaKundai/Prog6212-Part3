@using Contract_Monthly_Claim_System.Models
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@model List<Claim>
@{
    ViewData["Title"] = "My Claims";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-list me-2"></i>My Claims</h4>
            <a href="@Url.Action("Lecturer", "Claims")" class="btn btn-light">
                <i class="fas fa-plus me-1"></i>New Claim
            </a>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5>No claims submitted yet</h5>
                    <p class="text-muted">You haven't submitted any claims. Start by submitting your first claim.</p>
                    <a href="@Url.Action("Lecturer", "Claims")" class="btn btn-primary">Submit Your First Claim</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Date Submitted</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.OrderByDescending(c => c.DateSubmitted))
                            {
                                <tr>
                                    <td><strong>#@claim.ClaimId</strong></td>
                                    <td>@claim.HoursWorked hours</td>
                                    <td>R @claim.HourlyRate</td>
                                    <td><strong>R @claim.TotalAmount</strong></td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(claim.Status)">
                                            @claim.Status
                                        </span>
                                    </td>
                                    <td>@claim.DateSubmitted.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <a href="@Url.Action("Details", "Claims", new { id = claim.ClaimId })"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6>Total Claims</h6>
                                <h4 class="text-primary">@Model.Count</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h6>Approved</h6>
                                <h4>@Model.Count(c => c.Status == "Approved")</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning">
                            <div class="card-body text-center">
                                <h6>Pending</h6>
                                <h4>@Model.Count(c => c.Status == "Pending")</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-danger text-white">
                            <div class="card-body text-center">
                                <h6>Rejected</h6>
                                <h4>@Model.Count(c => c.Status == "Rejected")</h4>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            "Pending" => "bg-warning",
            _ => "bg-secondary"
        };
    }
}
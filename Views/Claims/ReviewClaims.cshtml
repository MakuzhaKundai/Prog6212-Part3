@{
}
@model List<Contract_Monthly_Claim_System.Models.Claim>

@{
    ViewData["Title"] = "Review Claims";
}

<div class="container">
    <h2>Review Claims</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Lecturer</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total</th>
                <th>Status</th>
                <th>Date Submitted</th>
                <th>Document</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.Id</td>
                    <td>@claim.Lecturer?.FirstName @claim.Lecturer?.LastName</td>
                    <td>@claim.HoursWorked</td>
                    <td>R @claim.HourlyRate</td>
                    <td>R @claim.TotalAmount</td>
                    <td>
                        <span class="badge
                            @(claim.Status == "Approved" ? "bg-success" :
                              claim.Status == "Rejected" ? "bg-danger" :
                              "bg-warning")">
                            @claim.Status
                        </span>
                    </td>
                    <td>@claim.DateSubmitted.ToString("dd MMM yyyy")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.DocumentPath))
                        {
                            <a href="~/documents/@claim.DocumentPath" download="@claim.OriginalFileName" class="btn btn-sm btn-outline-primary">
                                Download
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">None</span>
                        }
                    </td>
                    <td>
                        @if (claim.Status == "Pending")
                        {
                            <div class="btn-group">
                                <form method="post" asp-action="Approve" asp-route-id="@claim.Id" class="d-inline">
                                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                </form>
                                <form method="post" asp-action="Reject" asp-route-id="@claim.Id" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">Processed</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No claims found.
        </div>
    }
</div>
@model List<Contract_Monthly_Claim_System.Models.Claim>

@{
    ViewData["Title"] = "Reports";
}

<div class="container">
    <h2>Claims Reports</h2>

    <div class="row mb-4">
        <div class="col-md-3">
            <label for="statusFilter" class="form-label">Filter by Status:</label>
            <select id="statusFilter" class="form-select">
                <option value="">All Statuses</option>
                <option value="Pending">Pending</option>
                <option value="Approved">Approved</option>
                <option value="Rejected">Rejected</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="dateFrom" class="form-label">Date From:</label>
            <input type="date" id="dateFrom" class="form-control">
        </div>
        <div class="col-md-3">
            <label for="dateTo" class="form-label">Date To:</label>
            <input type="date" id="dateTo" class="form-control">
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button onclick="filterReports()" class="btn btn-primary me-2">Apply Filters</button>
            <button onclick="generatePDF()" class="btn btn-success">Generate PDF</button>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Claims Summary</h5>
        </div>
        <div class="card-body">
            <table class="table" id="reportsTable">
                <thead>
                    <tr>
                        <th>Claim ID</th>
                        <th>Lecturer</th>
                        <th>Hours</th>
                        <th>Rate</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Date Submitted</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.Id</td>
                            <td>@claim.Lecturer?.FirstName @claim.Lecturer?.LastName</td>
                            <td>@claim.HoursWorked</td>
                            <td>R @claim.HourlyRate</td>
                            <td>R @claim.TotalAmount</td>
                            <td>
                                <span class="badge
                                    @(claim.Status == "Approved" ? "bg-success" :
                                      claim.Status == "Rejected" ? "bg-danger" :
                                      "bg-warning")">
                                    @claim.Status
                                </span>
                            </td>
                            <td>@claim.DateSubmitted.ToString("dd MMM yyyy")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-primary">
                        <td colspan="4"><strong>Total Approved Amount:</strong></td>
                        <td colspan="3">
                            <strong>R @Model.Where(c => c.Status == "Approved").Sum(c => c.TotalAmount)</strong>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function filterReports() {
            const status = document.getElementById('statusFilter').value;
            const dateFrom = document.getElementById('dateFrom').value;
            const dateTo = document.getElementById('dateTo').value;

            // In a real implementation, this would call the server with filters
            // For now, we'll just show an alert
            alert(`Filters applied:\nStatus: ${status || 'All'}\nFrom: ${dateFrom || 'Any'}\nTo: ${dateTo || 'Any'}`);
        }

        function generatePDF() {
            alert('PDF report generation would be implemented here with a library like QuestPDF or iTextSharp');
            // This would typically call a server endpoint to generate and download PDF
            window.open('@Url.Action("GeneratePdf", "Claims")', '_blank');
        }
    </script>
}
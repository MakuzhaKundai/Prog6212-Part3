@{
}
@model IEnumerable<Contract_Monthly_Claim_System.Models.ApplicationUser>

@{
    ViewData["Title"] = "User Management";
}

<div class="container">
    <h2>User Management</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New User</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Hourly Rate</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>R @user.HourlyRate</td>
                    <td>
                        <span class="badge bg-secondary">@user.Role</span>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
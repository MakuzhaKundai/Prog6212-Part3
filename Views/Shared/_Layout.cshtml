<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar-brand {
            font-weight: bold;
        }

        .sidebar {
            min-height: calc(100vh - 56px);
            background-color: #f8f9fa;
        }

            .sidebar .nav-link {
                color: #333;
                padding: 0.75rem 1rem;
            }

                .sidebar .nav-link:hover {
                    background-color: #e9ecef;
                }

                .sidebar .nav-link.active {
                    background-color: #007bff;
                    color: white;
                }

        .main-content {
            padding: 2rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-file-invoice-dollar me-2"></i>
                    Contract Claim System
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Home")">
                                    <i class="fas fa-home me-1"></i>Home
                                </a>
                            </li>

                            @if (User.IsInRole("Lecturer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("MyClaims", "Claims")">
                                        <i class="fas fa-list me-1"></i>My Claims
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Create", "Claims")">
                                        <i class="fas fa-plus me-1"></i>New Claim
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Admin") || User.IsInRole("Coordinator") || User.IsInRole("HR"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Coordinator", "Claims")">
                                        <i class="fas fa-tasks me-1"></i>Review Claims
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-cog me-1"></i>Management
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="@Url.Action("Index", "UserManagement")">User Management</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Index", "LecturerManagement")">Lecturer Management</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Reports", "Claims")">Reports</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-3">
                                    <i class="fas fa-user me-1"></i>
                                    Welcome, @User.FindFirst("FullName")?.Value
                                    <small class="text-light ms-2">(@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value)</small>
                                </span>
                            </li>
                            <li class="nav-item">
                                <form method="post" action="@Url.Action("Logout", "Account")" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-light btn-sm">
                                        <i class="fas fa-sign-out-alt me-1"></i>Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Account")">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            @if (User.Identity.IsAuthenticated)
            {
                <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                    <div class="position-sticky pt-3">
                        <ul class="nav flex-column">
                            @if (User.IsInRole("Lecturer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "MyClaims" ? "active" : "")"
                                       href="@Url.Action("MyClaims", "Claims")">
                                        <i class="fas fa-list me-2"></i>My Claims
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Create" ? "active" : "")"
                                       href="@Url.Action("Create", "Claims")">
                                        <i class="fas fa-plus me-2"></i>Submit New Claim
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Admin") || User.IsInRole("Coordinator") || User.IsInRole("HR"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Coordinator" ? "active" : "")"
                                       href="@Url.Action("Coordinator", "Claims")">
                                        <i class="fas fa-tasks me-2"></i>Pending Claims
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "HR" ? "active" : "")"
                                       href="@Url.Action("HR", "Claims")">
                                        <i class="fas fa-file-alt me-2"></i>All Claims
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <hr class="my-2">
                                    <h6 class="sidebar-heading px-3 mt-3 mb-1 text-muted text-uppercase">
                                        <small>Administration</small>
                                    </h6>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "UserManagement" ? "active" : "")"
                                       href="@Url.Action("Index", "UserManagement")">
                                        <i class="fas fa-users me-2"></i>User Management
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "LecturerManagement" ? "active" : "")"
                                       href="@Url.Action("Index", "LecturerManagement")">
                                        <i class="fas fa-chalkboard-teacher me-2"></i>Lecturer Management
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Reports" ? "active" : "")"
                                       href="@Url.Action("Reports", "Claims")">
                                        <i class="fas fa-chart-bar me-2"></i>Reports
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </nav>
            }

            <main class="@(User.Identity.IsAuthenticated ? "col-md-9 ms-sm-auto col-lg-10" : "col-12") px-md-4 main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center">
            &copy; 2024 - Contract Monthly Claim System
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
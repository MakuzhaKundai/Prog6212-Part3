@{
}
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="fas fa-sign-in-alt me-2"></i>Login to System</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username" required>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Login
                            </button>
                        </div>
                    </form>

                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger mt-3">
                            Invalid username or password
                        </div>
                    }

                    <hr class="my-4">

                    <div class="row text-center">
                        <div class="col-md-4 mb-2">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <i class="fas fa-user-graduate fa-2x text-primary mb-2"></i>
                                    <h6>For Lecturers</h6>
                                    <small class="text-muted">Submit claims and track status</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-2">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <i class="fas fa-tasks fa-2x text-success mb-2"></i>
                                    <h6>For Coordinators</h6>
                                    <small class="text-muted">Review and approve claims</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-2">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <i class="fas fa-cog fa-2x text-info mb-2"></i>
                                    <h6>For HR/Admin</h6>
                                    <small class="text-muted">Manage users and reports</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Demo Accounts -->
                    <div class="mt-4">
                        <h6 class="text-center mb-3">Demo Accounts:</h6>
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <div class="card border-primary">
                                    <div class="card-body py-2">
                                        <small><strong>Admin</strong><br>admin / admin123</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-2">
                                <div class="card border-success">
                                    <div class="card-body py-2">
                                        <small><strong>Lecturer</strong><br>lecturer1 / lecturer123</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>